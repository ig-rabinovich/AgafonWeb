<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - КМД помощник</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container sticky-top">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">КМД помощник</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="nav">
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/#">Болты</a>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/#">Сварка</a>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/#">Расчет узлов</a>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/#">Документация</a>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Privacy">О проекте</a>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <div class="container">
        <div class="row gy-5">
            <div class="col-12">
                <div class="p-3 border bg-light">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <footer class="border-top text-muted d-flex flex-wrap justify-content-between align-items-center py-3 my-4">
            <div class="container">
                &copy; 2022 - КМД помощник - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
